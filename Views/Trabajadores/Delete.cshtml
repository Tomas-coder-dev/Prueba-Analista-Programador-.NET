@model Myper.Trabajadores.Web.Models.Trabajador

@{
    ViewData["Title"] = "Eliminar Trabajador";
}

<h1>Eliminar Trabajador</h1>

<h3>¿Está seguro de eliminar el registro?</h3>

<div>
    <h4>@Model.Nombres @Model.Apellidos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.TipoDocumento - @Model.NumeroDocumento</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@((Model.Sexo == 'M') ? "Masculino" : "Femenino")</dd>

        <dt class="col-sm-2">Fecha Nac.</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>